# Sui Network Configuration
SUI_NETWORK=testnet
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
SUI_RPC_BACKUP_1=https://sui-testnet.nodeinfra.com
SUI_RPC_BACKUP_2=https://testnet.sui.rpcpool.com
PACKAGE_ID=0x...

# Backend Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SUI_NETWORK=testnet
NEXT_PUBLIC_PACKAGE_ID=0x...

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/flashloan
REDIS_URL=redis://localhost:6379

# Security Configuration
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000
MAX_GAS_BUDGET=1000000
DEFAULT_GAS_BUDGET=500000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=10000
RETRY_BACKOFF_FACTOR=2
RETRY_JITTER=true

# RPC Configuration
RPC_TIMEOUT=30000
RPC_MAX_RETRIES=3

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOGS=true
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# GitHub Configuration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_OWNER=your-username
GITHUB_REPO=sui-flash-loan-dapp

# Deployment Configuration
DEPLOY_ENVIRONMENT=testnet
INFURA_PROJECT_ID=your-infura-project-id
PRIVATE_KEY=your-private-key-change-this-in-production

# Notification Configuration
DISCORD_WEBHOOK_URL=your-discord-webhook-url
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Feature Flags
ENABLE_ADVANCED_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_ALERTS=true